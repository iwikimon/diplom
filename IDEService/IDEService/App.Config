<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="lightSpeedContexts" type="Mindscape.LightSpeed.Configuration.LightSpeedConfigurationSection, Mindscape.LightSpeed"/>
  </configSections>
  <lightSpeedContexts>
    <add name="Development" connectionStringName="Development" dataProvider="MySql5" pluralizeTableNames="False"/>
  </lightSpeedContexts>
  <connectionStrings>
    <add name="Development" connectionString="server=localhost;User Id=root;password=123456;database=ideservice"/>
  </connectionStrings>
  <system.serviceModel>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true"/>
    <behaviors>
      <serviceBehaviors>
        <behavior name="IDEService.ServiceBehavior">
          <serviceMetadata httpGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
      <endpointBehaviors>
        <behavior name="CrossDomainServiceBehavior">
          <webHttp/>
        </behavior>
      </endpointBehaviors>
    </behaviors>
    <services>
      <service behaviorConfiguration="IDEService.ServiceBehavior" name="IDEService.Service">
        <endpoint address="" binding="basicHttpBinding" contract="IDEService.IService"/>
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange"/>
        <host>
          <baseAddresses>
            <add baseAddress="http://192.168.1.34:8731/IDEService"/>
          </baseAddresses>
        </host>
      </service>
      <service name="IDEService.CrossDomainService">
        <host>
          <baseAddresses>
            <add baseAddress="http://192.168.1.34:8731/"/>
          </baseAddresses>
        </host>
        <endpoint address="" binding="webHttpBinding" contract="IDEService.ICrossDomainService" behaviorConfiguration="CrossDomainServiceBehavior"/>
      </service>
    </services>
  </system.serviceModel>
  <startup><supportedRuntime version="v2.0.50727"/></startup>
</configuration>
