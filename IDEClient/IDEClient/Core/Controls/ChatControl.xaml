<UserControl x:Class="IDEClient.Core.Controls.ChatControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" Foreground="#FF122AB1" FontStretch="Condensed" FontStyle="Italic">
    
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <RichTextBox Name="chatRtb" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" >
         
        </RichTextBox>
        <TextBox Name="msg" Grid.Row="1" KeyDown="msg_KeyDown" />
    </Grid>
</UserControl>
